<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_item"
        android:layout_width="match_parent"
        android:layout_height="239dp">

        <ImageView
            android:id="@+id/item_picture"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/cabriolet2"
            android:contentDescription="@string/cabriolet" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#0CA4D3"
            android:textSize="13dp"
            android:text="@string/back"
            android:textColor="#263238" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/marque"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/model"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/prix"
            android:layout_marginStart="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/paypal1"
                android:contentDescription="@string/paypal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#993DB7D8"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paiment_securise_avec_paypal"
                android:textColor="#37474F" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Reserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="#0CA4D3"
        android:text="@string/reserver"
        android:textColor="#5D4037"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />

    <TextView
        android:id="@+id/item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="@string/anne_modele"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/item_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="@string/kilometrage"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/item_gearBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="@string/boite_de_vitesse"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/item_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="@string/carburant"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>


</LinearLayout>