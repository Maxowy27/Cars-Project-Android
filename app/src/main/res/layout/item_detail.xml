<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:src="@drawable/voiture1" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Voiture qui va vite"
        android:textColor="@color/black"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="10000 €"
        android:layout_marginStart="15dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/paypal1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#993DB7D8"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paiment sécurisé avec PayPal" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis at erat massa. Donec laoreet, tellus nec luctus interdum, risus mauris ultricies velit, a tincidunt enim turpis a neque."
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="14sp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/Reserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="#0CA4D3"
        android:text="Réserver"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Marque"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Modèle"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Année-modèle"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Kilométrage"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/gearBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Boite de vitesse"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Carburant"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:text="Prix"
        android:textSize="16sp"
        android:layout_marginVertical="5dp"/>




</LinearLayout>