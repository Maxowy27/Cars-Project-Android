<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/return_button"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#0CA4D3"
            android:text="@string/back"
            android:textColor="#263238"
            android:textSize="10sp"
            tools:ignore="SmallSp,TextSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/coldface"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/profil_picture" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shavedice"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/emoji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="30sp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0CA4D3"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/list_buyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/listes_des_reservations"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/listview_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</LinearLayout>